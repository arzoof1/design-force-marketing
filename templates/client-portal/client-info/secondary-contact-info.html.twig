<section>
    <div class="border-b border-black border-b-[1px] pb-1">
        <h5 class="font-bold text-base leading-6 tracking-[0.5px]">
            Secondary Contact Info
        </h5>
    </div>

    <div class="flex flex-col gap-7 my-7">
        <div class="flex flex-col gap-7">
            <div class="flex flex-col gap-2.5">

                <div class="grid md:grid-cols-2 gap-2.5">
                    <!-- First Name -->
                    <div>
                        {{ form_widget(form.secondaryFirstName, {
                            attr: {
                                placeholder: 'First Name *',
                                class: 'w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                        active:border-blue-500 active:ring-2 active:ring-blue-200'
                            }
                        }) }}
                    </div>

                    <!-- Last Name -->
                    <div>
                        {{ form_widget(form.secondaryLastName, {
                            attr: {
                                placeholder: 'Last Name *',
                                class: 'w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                        active:border-blue-500 active:ring-2 active:ring-blue-200'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Personal Email -->
                <div>
                    {{ form_widget(form.secondaryPersonalEmail, {
                        attr: {
                            placeholder: 'Personal Email *',
                            class: 'w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                                    placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                    focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                    active:border-blue-500 active:ring-2 active:ring-blue-200'
                        }
                    }) }}
                </div>

                <div class="grid md:grid-cols-2 gap-2.5">
                    <!-- Personal Phone -->
                    <div>
                        {{ form_widget(form.secondaryPersonalPhone, {
                            attr: {
                                placeholder: 'Personal Phone *',
                                class: 'w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                        active:border-blue-500 active:ring-2 active:ring-blue-200'
                            }
                        }) }}
                    </div>

                    <!-- Phone Type -->
                    <div>
                        {{ form_widget(form.secondaryPersonalPhoneType, {
                            attr: {
                                placeholder: 'Personal Phone Type *',
                                class: 'w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                        active:border-blue-500 active:ring-2 active:ring-blue-200'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Any Notes? -->
                <div>
                    {{ form_widget(form.secondaryPersonalNotes, {
                        attr: {
                            placeholder: 'Any Notes? *',
                            class: 'w-full h-[120px] rounded border border-[#0000006B] px-2 py-3 opacity-100 resize-none
                                    placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                                    focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                                    active:border-blue-500 active:ring-2 active:ring-blue-200'
                        }
                    }) }}
                </div>
            </div>
        </div>

        <!-- Template (hidden, used for cloning) -->
        <template data-secondary-contact-form-target="template">
            <div class="grid md:grid-cols-2 gap-2.5">
                <!-- First Name -->
                <div>
                    <input type="text" placeholder="First Name *" name="secondary_contact[][first_name]" class="w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                        active:border-blue-500 active:ring-2 active:ring-blue-200"
                    />
                </div>

                <!-- Last Name -->
                <div>
                    <input type="text" placeholder="Last Name *" name="secondary_contact[][last_name]" class="w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                        active:border-blue-500 active:ring-2 active:ring-blue-200"
                    />
                </div>
            </div>

            <!-- Personal Email -->
            <div>
                <input type="email" placeholder="Personal Email *" name="secondary_contact[][personal_email]" class="w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                    placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                    focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                    active:border-blue-500 active:ring-2 active:ring-blue-200"
                />
            </div>

            <div class="grid md:grid-cols-2 gap-2.5">
                <!-- Personal Phone -->
                <div>
                    <input type="text" placeholder="Personal Phone *" name="secondary_contact[][personal_phone]" class="w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                        active:border-blue-500 active:ring-2 active:ring-blue-200"
                    />
                </div>

                <!-- Phone Type -->
                <div>
                    <input type="text" placeholder="Phone Type" name="secondary_contact[][phone_type]" class="w-full h-[50px] rounded border border-[#0000006B] px-2 py-3 opacity-100 
                        placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                        focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                        active:border-blue-500 active:ring-2 active:ring-blue-200"
                    />
                </div>
            </div>

            <!-- Any Notes? -->
            <div>
                <textarea name="secondary_contact[][any_notes]" placeholder="Any Notes?" class="w-full h-[120px] rounded border border-[#0000006B] px-2 py-3 opacity-100 resize-none
                    placeholder:font-normal placeholder:text-base placeholder:leading-6 placeholder:tracking-[0.5px] placeholder:align-middle placeholder:text-[#000000DE]
                    focus:border-blue-500 focus:ring-2 focus:ring-blue-200 
                    active:border-blue-500 active:ring-2 active:ring-blue-200"
                ></textarea>
            </div>
        </template>
    </div>

    <!-- Button -->
    <div class="flex flex-row items-center cursor-pointer gap-3" data-action="click->secondary-contact-form#add">
        <svg width="15" height="14" viewBox="0 0 15 14" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-4 h-4">
            <path d="M7.50008 1.1665V12.8332M1.66675 6.99984H13.3334" stroke="#3F51B5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <p class="font-medium text-sm leading-1 tracking-[1.25px] uppercase text-[#3F51B5]">Add an Additional Contact</p>
    </div>
</section>