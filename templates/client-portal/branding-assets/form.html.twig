{% extends 'base.html.twig' %}

{% block body %}
    <main id="client-info" data-tabs-target="content">
        
        <div class="container mx-auto flex flex-col md:flex-row">
            <div class="md:block md:w-1/4 p-4"></div>

            <div class="w-full md:w-1/2 p-4">
                <h1 class="font-normal text-[34px] leading-[40px] tracking-[0.25px] text-[#000000DE]">
                    Branding Assets
                </h1>
                <button 
                    class="h-[50px] rounded-md px-4 gap-4 opacity-100 
                            bg-[#FF5252] text-white font-medium text-sm leading-9 tracking-[1.5px] 
                            text-center align-middle uppercase mt-3">
                    Schedule your creative meeting today! Click here
                </button>
            </div>

            <div class="hidden md:block md:w-1/4 p-4"></div>
        </div>

        <div class="container mx-auto flex flex-col md:flex-row">
            <!-- sidebar start -->
            <div class="w-full md:w-1/4 px-4 py-6">
                <div class="relative border-l-4 border-[#0000001F]">
                    <div class="mb-8 ml-5">
                        <span class="absolute -left-3 w-5 h-5 rounded-full border-2 border-white p-1 bg-[#4CAF50] shadow-[0_1px_5px_0_#0000001F,0_2px_2px_0_#00000024,0_1px_1px_0_#00000033]"></span>
                        <p class="font-normal text-sm leading-[22px] tracking-[0.1px] text-[#4CAF50]">Upload Logos</p>
                    </div>
                    <div class="mb-8 ml-5">
                        <span class="absolute -left-3 w-5 h-5 rounded-full border-2 border-white p-1 bg-[#3F51B5] shadow-[0_1px_5px_0_#0000001F,0_2px_2px_0_#00000024,0_1px_1px_0_#00000033]"></span>
                        <p class="font-normal text-sm leading-[22px] tracking-[0.1px] text-[#00000099]">Photos</p>
                    </div>
                    <div class="mb-8 ml-5 ">
                        <span class="absolute -left-3 w-5 h-5 rounded-full border-2 border-white p-1 bg-[#3F51B5] shadow-[0_1px_5px_0_#0000001F,0_2px_2px_0_#00000024,0_1px_1px_0_#00000033]"></span>
                        <p class="font-normal text-sm leading-[22px] tracking-[0.1px] text-[#00000099]">Brand Colors</p>
                    </div>
                    <div class="mb-8 ml-5 ">
                        <span class="absolute -left-3 w-5 h-5 rounded-full border-2 border-white p-1 bg-[#3F51B5] shadow-[0_1px_5px_0_#0000001F,0_2px_2px_0_#00000024,0_1px_1px_0_#00000033]"></span>
                        <p class="font-normal text-sm leading-[22px] tracking-[0.1px] text-[#00000099]">Logo Colors</p>
                    </div>
                    <div class="mb-8 ml-5 ">
                        <span class="absolute -left-3 w-5 h-5 rounded-full border-2 border-white p-1 bg-[#3F51B5] shadow-[0_1px_5px_0_#0000001F,0_2px_2px_0_#00000024,0_1px_1px_0_#00000033]"></span>
                        <p class="font-normal text-sm leading-[22px] tracking-[0.1px] text-[#00000099]">Website Preferences</p>
                    </div>
                </div>
            </div>
            <!-- sidebar end -->

            <div class="w-full md:w-1/2 p-4">

                <!-- Upload Logos -->
                {% include 'client-portal/branding-assets/upload-logos.html.twig' %}

                <!-- Brand Fonts -->
                {% include 'client-portal/branding-assets/brand-fonts.html.twig' %}

                <!-- Brand Colors -->
                {% include 'client-portal/branding-assets/brand-colors.html.twig' %}

                <!-- Logo Colors -->
                {% include 'client-portal/branding-assets/logo-colors.html.twig' %}

                <!-- Website Direction Prefrences -->
                {% include 'client-portal/branding-assets/website-direction-prefrences.html.twig' %}

                <!-- Bottom Action Area -->
                {% include 'client-portal/partials/footer-actions.html.twig' with {
                    route_name: 'business_questions',
                } %}
                

            </div>

            <div class="w-full md:w-1/4 p-4"></div>
        </div>

        <div>
            <p class="font-bold text-[16px] leading-[24px] tracking-[0.5px] text-center text-black/87">Send any additional photo or video assets to support@designforcemarketing.com</p>
        </div>

    </main>

{% endblock %}