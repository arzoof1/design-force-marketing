        <h5 class="font-bold text-base leading-6 tracking-[0.5px]">
            Brand Fonts
        </h5>
        <div class="flex flex-row gap-2">
            {{ form_widget(form.brandFontNotCreated, {
                attr: {
                    class: 'appearance-none w-5 h-5 border-2 border-black/60 rounded-sm flex items-center justify-center checked:bg-black checked:border-black checked:before:content-["âœ“"] checked:before:text-white checked:before:text-sm'
