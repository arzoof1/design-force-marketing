                    <img src="{{ asset('assets/images/icons/e-commerce.svg') }}" alt="Email Service" class="w-[150px] h-auto -rotate-[10.97deg] opacity-100">
                </div>
            </div>

            <div class="w-full md:w-1/2 p-4">

                <!-- Services -->
                {% include 'client-portal/additional-services/services.html.twig' %}

                <!-- Bottom Action Area -->
                {% include 'client-portal/partials/footer-actions.html.twig' with {
                    route_name: '',
                } %}

            </div>

            <div class="w-full md:w-1/4 p-4">
                <div class="flex flex-col justify-end items-end gap-[75px]">
                    <img src="{{ asset('assets/images/icons/text-messaging.svg') }}" alt="Email Service" class="w-[125px] h-auto rotate-[11.46deg] opacity-100">
                    <img src="{{ asset('assets/images/icons/videography.svg') }}" alt="Email Service" class="w-[100px] h-auto -rotate-[2.98deg] opacity-100">
                    <img src="{{ asset('assets/images/icons/barter-trade.svg') }}" alt="Email Service" class="w-[120px] h-auto rotate-[7.01deg] opacity-100">
                    <img src="{{ asset('assets/images/icons/social-chat-bots.svg') }}" alt="Email Service" class="w-[150px] h-auto -rotate-[14.78deg] opacity-100">
                    <img src="{{ asset('assets/images/icons/multilingual.svg') }}" alt="Email Service" class="w-[150px] h-auto rotate-[14.52deg] opacity-100">
                    <img src="{{ asset('assets/images/icons/digital-signage.svg') }}" alt="Email Service" class="w-[150px] h-auto -rotate-[8.62deg] opacity-100">
                </div>
            </div>
        </div>

    </main>

{% endblock %}